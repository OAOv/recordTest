<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_background"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity_signUp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/secrectnote_whiteword_littlestarsteel" />

    <EditText
        android:id="@+id/textAccount"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_radius_white"
        android:hint="帳戶"
        android:inputType="text"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textPW"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_radius_white"
        android:hint="密碼"
        android:inputType="textPassword"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/textPW2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_radius_white"
        android:hint="再次輸入密碼"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textNickname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_radius_white"
        android:hint="暱稱"
        android:inputType="text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNextStep"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/btn_radius_steelblue"
        android:text="註冊"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>